.login-overlay
  z-index 8000
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.28)
  overflow hidden
  
  .login-inner
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    font-size 16px
    
  label
    margin-bottom 0
  
  .left
    float left
  .right
    float right
  
  .ui-panel
    width 360px
    height auto
    background-color white
    color #222
    border 1px solid #161616
    box-shadow 0 0 12px rgba(0,0,0,0.3)
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
  header
    height 46px
    border-bottom 1px solid #161616
    line-height 46px
    padding 0 28px
    font-size 0.65em
    font-weight 600
    letter-spacing 0.3em
    clearfix()
    .logo
      text-transform uppercase
      animation-delay 0.6s
      span
        color yellow
  .login-form
    padding 18px 28px 0 28px
    clearfix()

    .subtitle
      font-size 0.92em
    input
      width 100%
    .mdl-textfield:last-of-type
      margin-top -20px
  footer
    padding 6px 28px 22px 28px
    font-size 0.82em
    clearfix()
    .form-actions
      .register
        background-color yellow
        color black
    .forgot
      text-align right
      margin-top 6px
      
.login-overlay.ng-enter, .login-overlay.ng-hide-add
  animation fadeOut 0.3s
  .login-inner
    animation slideOutUp 0.3s
  
.login-overlay.ng-leave, .login-overlay.ng-hide-remove
  animation fadeIn 1.5s
  .login-inner
    animation bounceInDown 0.6s